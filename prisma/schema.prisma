model User {
  // id            String    @id @default(auto()) @map("_id") @db.ObjectId 
  id                String  @id @default(uuid())
  userId            String  @unique
  // name          String?
  // email         String?   @unique
  // emailVerified DateTime?
  // username String? @unique
  // image         String?
  // accounts      Account[]
  // sessions      Session[]
  habits        Habit[]
  // linkedUserId    String?   @db.ObjectId
  linkedUserId    String? 
  linkingRequests LinkingRequest[]
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@index([linkedUserId], name: "linkedUserId_idx")
}

model LinkingRequest {
  // id               String   @id @default(auto()) @map("_id") @db.ObjectId
  id                String  @id @default(uuid())
  // requestorId      String   @map("requestor_id") @db.ObjectId
  requestorId      String   @map("requestor_id")
  responderEmail   String
  secretQuestion   String
  secretAnswerHash String
  // expiryDate       DateTime
  linkType         String
  requestor        User     @relation(fields: [requestorId], references: [id])

  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}

model Habit {
  // id             String  @id @default(auto()) @map("_id") @db.ObjectId
  id                String  @id @default(uuid())
  habitName      String
  completions    HabitCompletion[]
  user           User  @relation(fields: [userId], references: [id])
  userId         String
  color          String
  slug           String @unique
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model HabitCompletion {
  // id             String   @id @default(auto()) @map("_id") @db.ObjectId
  id                String  @id @default(uuid())
  date           DateTime
  dayOfWeek      String
  isActive       Boolean
  isComplete     Boolean
  isIncluded     Boolean
  habit          Habit    @relation(fields: [habitId], references: [id], onDelete: Cascade)
  habitId        String
}
